#!/usr/bin/env python3
"""
Simple Subdomain Scanner
Author: [sanjit mandal]
Usage: python3 subdomain_scanner.py example.com
"""

import sys
import requests

def scan_subdomains(domain):
    """Scan for common subdomains"""
    subdomains = [
        "www", "mail", "ftp", "test", "dev", "admin",
        "blog", "api", "secure", "portal", "demo"
    ]
    
    found = []
    for sub in subdomains:
        url = f"http://{sub}.{domain}"
        try:
            response = requests.get(url, timeout=3)
            if response.status_code < 400:
                found.append(url)
                print(f"[+] Found: {url}")
        except:
            continue
    
    return found

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: python3 subdomain_scanner.py <domain>")
        sys.exit(1)
    
    domain = sys.argv[1]
    print(f"Scanning subdomains for: {domain}")
    results = scan_subdomains(domain)
    print(f"\nFound {len(results)} accessible subdomains")
